/* pages/reading/reading.wxss */

.essay-list {
    display: flex;
    flex-direction: column;
    padding: 40rpx;
}

.logo {
    width: 200rpx;
    height: 80rpx;
    margin-left: 280rpx;
}

.divline {
    background: #0033ff35;
    width: 100%;
    height: 5rpx;
}
/* ////////////////////////// */

.essay-item {
    background: rgba(224, 230, 243, 0.815);
    border-radius: 10rpx;
    width: 95%;
    height: 200rpx;
}
.essay-info{
    margin: 20rpx;
    padding: 20rpx;
}
.essay-title {
    font-size: 18px;
    color: #000;
}
.essay-date {
    margin-left: 20rpx;
    font-size: 14px;
    color: rgba(204, 175, 11, 0.959); 
}
.casts {
    margin-top: 20rpx;
}
.label {
    font-size: 14px;
    color: rgb(0, 0, 0); 
}
.grade {
    margin-left: 10rpx;
    font-size: 14px;
    color: rgb(3, 78, 238); 
}