<scroll-view scroll-y class="container">
    <view class="logo-container">
        <image class="logo" src="/imgs/logo.png"></image>
    </view>
    <view class="divline" />
    <view class="essay">
        <view class="essay-title">{{essay.title}}</view>
        <block wx:for-items="{{essay.grade}}" wx:for-item="grade" wx:key="">
            <text class="essay-grade">{{grade}}</text>
        </block>
        <view class="essay-detail">{{essay.content}}</view>
    </view>
</scroll-view>